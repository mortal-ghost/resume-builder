<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>

	<title>
		Resume Builder - <%= profile.name %>
	</title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />

	<meta name="keywords" content="" />
	<meta name="description" content="" />

	<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" media="all" /> 
	<link rel="stylesheet" type="text/css" href="/styles/resume.css" media="all" />

</head>
<body>

<div id="doc2" class="yui-t7">
	<div id="inner">
	
		<div id="hd">
			<div class="yui-gc">
				<div class="yui-u first">
					<h1>
						<%= profile.name %>
					</h1>
					<h2>
						<%= profile.job_title %>
					</h2>
				</div>

				<div class="yui-u">
					<div class="contact-info">
						<h3><a href="mailto:<%= profile.email %>" target="_blank" >
							<%= profile.email %>
						</a></h3>
						<h3>
							<a href="<%= profile.linkedin %>" target="_blank" >
								LinkedIn
							</a>
						</h3>
						<h3>
							<%= profile.phone %>
						</h3>
						
					</div><!--// .contact-info -->
				</div>
			</div><!--// .yui-gc -->
		</div><!--// hd -->

		<div id="bd">
			<div id="yui-main">
				<div class="yui-b">

					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Profile</h2>
						</div>
						<div class="yui-u">
							<p class="enlarge">
								<%= profile.summary %>
							</p>
						</div>
					</div><!--// .yui-gf -->

					<% if (profile.projects.length > 0) { %>
					<div class="yui-gf">
						<div class="yui-u first">
							<h2>
								Projects
							</h2>
						</div>
						<div class="yui-u">
							<% profile.projects.forEach((project) => { %>
								<div class="talent">
									<h2>
										<%= project.name %>
									</h2>
									<p>
										<%= project.description %>
									</p>
								</div>
							<% }); %>
						</div>
					</div><!--// .yui-gf -->
					<% } %>

					<div class="yui-gf">
						<div class="yui-u first">
							<h2>Technical</h2>
						</div>
						<div class="yui-u">
							<ul class="talent">
								<li>
									<%= profile.skills[0] %>
								</li>
								<li>
									<%= profile.skills[1] %>
								</li>
								<li class="last">
									<%= profile.skills[2] %>
								</li>
							</ul>

							<% const noOfSkills = Math.min(profile.skills.length, 6); %>
							<% console.log(noOfSkills); %>
							
							<ul class="talent">
								<% for (let i = 3; i < noOfSkills; i++) { %>
									<li
										<% if (i === 5) { %>
											class="last"
										<% } %>
									>
										<%= profile.skills[i] %>
									</li>
								<% } %>

							</ul>
							<ul>

								<% for (let i=6; i<=profile.skills.length; i++) { %>
									<li 
										<% if (i === 8) { %>
											class="last"
										<% } %>
									>
										<%= profile.skills[i] %>
									</li>
								<% } %>

							</ul>

						</div>
					</div><!--// .yui-gf-->

					<% if (profile.experience.length > 0) { %>
					<div class="yui-gf">
	
						<div class="yui-u first">
							<h2>Experience</h2>
						</div><!--// .yui-u -->

						<div class="yui-u">

							<% profile.experience.forEach((exp) => { %>
								<div class="job">
									<h2>
										<%= exp.company %>
									</h2>
									<h3>
										<%= exp.job %>
									</h3>
									<h4>
										<%= exp.start %> - <%= exp.end %>
									</h4>
									<p>
										<%= exp.description %>
									</p>
								</div>

							<% }) %>

						</div><!--// .yui-u -->
					</div><!--// .yui-gf -->
					<% } %>


					<div class="yui-gf last">
						<div class="yui-u first">
							<h2>Education</h2>
						</div>
						<div class="yui-u">
							<h2>
								<%= profile.education.school %>
							</h2>
							<h3>
								<%= profile.education.program %>, 
								<%= profile.education.major %>
								&mdash; <strong>
									<%= profile.education.score %>
								</strong> </h3>
						</div>
					</div><!--// .yui-gf -->


				</div><!--// .yui-b -->
			</div><!--// yui-main -->
		</div><!--// bd -->

		<div id="ft">
			<p>Jonathan Doe &mdash; <a href="mailto:<%= profile.email %>">
				<%= profile.email %>
			</a> &mdash; <%= profile.phone %></p>
		</p>
		</div><!--// footer -->

	</div><!-- // inner -->


</div><!--// doc -->


</body>
</html>
